include ../components/buttons/button

footer.footer
  .container
    .b-footer__wrapper
      .b-footer__text
        h2.h2.b-footer__title Успей купить!
        .b-footer__subtitle Подпишись и успей словить все акции
      form.f-subscribe(action="#")
