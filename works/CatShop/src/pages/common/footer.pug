          input.f-subscribe__field(type="email" placeholder="Email" required)
          +button('f-subscribe__button', 'Подписаться')
        input(type="checkbox" id="remeber" name="user-remember" checked)
        label(for="remeber").f-subscribe__checkbox.--checked Подписаться на новости

